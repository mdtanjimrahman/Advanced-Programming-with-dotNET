
@{
    ViewBag.Title = "DeptIndex";
}

<h2>Departments</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Department</th>
        <th>Operations</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a href="/Bright/DeptEdit/@item.Id">Update</a>
                <a href="/Bright/DeptDelete/@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/Bright/DeptCreate">Create Department</a>
<br />
<a href="/Bright/Index">Back</a>

