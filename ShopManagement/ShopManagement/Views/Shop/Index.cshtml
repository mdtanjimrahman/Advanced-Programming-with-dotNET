
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <form>
        <input type="text" name="search" placeholder="Search your producr name" class="form-control" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </form>
</div>
<br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Category</th>
        <th>Operations</th>
    </tr>

    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Qty</td>
                    <td>@item.Category.Name</td>
                    <td>
                        <a href="/Shop/Details/@item.Id">Details</a>
                        <a href="/Shop/Edit/@item.Id">Edit</a>
                        <a href="/Shop/Delete/@item.Id">Delete</a>
                    </td>
                </tr>
            }
</table>
<br />
<a href="/Shop/Create">Add new product</a>
