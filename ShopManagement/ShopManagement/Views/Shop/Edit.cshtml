
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Product Information</h2>

<form action="" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <label>Product Name</label>
    <input type="text" name="Name" value="@Model.Name" class="form-control" />
    <br />

    <label>Price</label>
    <input type="text" name="Price" value="@Model.Price" class="form-control" />
    <br />

    <label>Quantity</label>
    <input type="text" name="Qty" value="@Model.Qty" class="form-control" />
    <br />

    <p><strong>Current Category: </strong>@Model.Category.Name</p>
    <br />

    <label>Select a product category</label>
    <select name="CatId" class="form-control" />
        <option value="">Select your category</option>
        @foreach (var item in ViewBag.Categories)
        {
            <option value="@item.Id">@item.Name</option>
        }
    <br />
    </select>
    <input type="submit" value="Update" class="btn btn-primary" />
</form>
<br/>
<a href="/Shop/Index">Back</a>

