
@{
    ViewBag.Title = "Index";
}

@if (TempData["Msg"] != null)
{
    <p class="alert alert-info">@TempData["Msg"]</p>
}

<h1>Registration</h1>

<form action="" method="post">
    <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="Name" />
    <span class="text-danger">@Html.ValidationMessage("Name")</span>
    <br />
    <input type="text" name="UserName" value="@Model.UserName" class="form-control" placeholder="UserName" />
    <span class="text-danger">@Html.ValidationMessage("UserName")</span>
    <br />
    <input type="text" name="ID" value="@Model.Id" class="form-control" placeholder="Id" />
    <span class="text-danger">@Html.ValidationMessage("Id")</span>
    <br />
    <input type="date" name="DOB" value="@(Model.DOB == DateTime.MinValue ? "" : Model.DOB.ToString("yyyy-MM-dd"))" class="form-control" placeholder="Date of Birth" />
    <span class="text-danger">@Html.ValidationMessage("DOB")</span>
    <br />

    <input type="text" name="Email" value="@Model.Email" class="form-control" placeholder="AIUB Email" />
    <span class="text-danger">@Html.ValidationMessage("AIUB Email")</span>
    <br />

    <input type="submit" value="Register" class="btn btn-primary" />



</form>

