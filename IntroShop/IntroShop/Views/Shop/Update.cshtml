
@{
    ViewBag.Title = "Update";
}

@if (TempData["Msg"] != null)
{
    <p class="alert alert-info">@TempData["Msg"]</p>
}

<h2>Update</h2>

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="text" name="Name" value="@Model.Name" placeholder="Name" class="form-control" />
    <input type="text" name="Price" value="@Model.Price" placeholder="Price" class="form-control" />
    <input type="text" name="Qty" value="@Model.Qty" placeholder="Quantity" class="form-control" />
    <label>Category</label>
    
    <br />
    <input type="submit" value="Update" class="btn btn-primary" />
    <br />
    <a href="/Shop/Index">See Products</a> <br />
</form>

